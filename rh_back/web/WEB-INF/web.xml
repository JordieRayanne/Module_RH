    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProfilageController</servlet-name>
        <servlet-class>controller.ProfilageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfilageController</servlet-name>
        <url-pattern>/ProfilageController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>QuestionnaireController</servlet-name>
        <servlet-class>controller.QuestionnaireController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionnaireController</servlet-name>
